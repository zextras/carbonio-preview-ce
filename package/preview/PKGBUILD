  "pending-setups"
  "python38"
  "service-discover"
)
makedepends__yum=(
  "git"
  "python3-pip"
)
makedepends__rocky_8=(
  "git"
  "python38-pip"
)
makedepends__apt=(
  "git"
  "python3-pkg-resources"
  "python3-pip"
)

provides__yum=(
  "libjpeg-6d18ab84.so.62.3.0(LIBJPEG_6.2)(64bit)"
  "liblzma-b1622f49.so.5.4.3(XZ_5.0)(64bit)"
  "libpng16-36a62686.so.16.40.0(PNG16_0)(64bit)"
  "libz-dd453c56.so.1.2.11(ZLIB_1.2.3.4)(64bit)"
  "libz-dd453c56.so.1.2.11(ZLIB_1.2.9)(64bit)"
  "libtiff-b953f5f2.so.6.0.1(LIBTIFF_4.0)(64bit)"
  "/bin/python3.8"
)

source=(
  "carbonio-preview.service"
  "carbonio-preview-sidecar.service"
  "carbonio-preview-start.sh"
  "carbonio-preview.hcl"
  "carbonio-preview.sh"
  "carbonio-preview"
  "config.ini"
  "messages.ini"
  "intentions.json"
  "policies.json"
  "service-protocol.json"
)
sha256sums=(
  "SKIP"
